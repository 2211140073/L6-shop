<%= form_with model: @cartitem do |f| %>
  <p>
    <%= f.label :name, '商品名:' %>
    <%= Product.find(params[:product_id]).name %>
  </p>
  <p>
    <%= f.label :price, '価格:' %>
    <%= Product.find(params[:product_id]).price %>
  </p>
  <p>
    <%= f.label :qty, '数量' %>
    <%= f.number_field :qty %>
  </p>
 <%= f.hidden_field :product_id,value:params[:product_id] %>
  <%= f.submit '商品を登録する' %>
<% end %>